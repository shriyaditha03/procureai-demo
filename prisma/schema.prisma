generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model DemoRequest {
  id           String   @id @default(cuid())
  fullName     String
  organization String
  email        String
  phone        String?
  industry     String
  message      String
  createdAt    DateTime @default(now())
}
